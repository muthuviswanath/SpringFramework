import java.sql.*;
import java.util.Scanner;

public class NewEmp {
    public static void main(String[] args) throws Exception {
        Scanner scanner = new Scanner(System.in);
        Employees emp = new Employees();
        // Collect input from user
        System.out.print("Enter Employee ID: ");
        int empId = scanner.nextInt();
        emp.setEMP_ID(empId);
        scanner.nextLine(); // flush

        System.out.print("Enter Employee Name: ");
        String empName = scanner.nextLine();
        emp.setEMP_NAME(empName);

        System.out.print("Enter Salary: ");
        int salary = scanner.nextInt();
        	emp.setSalary(salary); 

        System.out.print("Enter Department ID: ");
        int deptId = scanner.nextInt();
        emp.setDepartment_ID(deptId);

        System.out.print("Enter Manager ID: ");
        int managerId = scanner.nextInt();
        emp.setManager_id(managerId);
        

        // JDBC connection
        Connection conn = JdbcUtil.getConnection();

        // Prepare SQL INSERT statement
        String sql = "INSERT INTO EMPLOYEES (EMP_ID, EMP_NAME, SALARY, DEPT_ID, MANAGER_ID) VALUES (?, ?, ?, ?, ?)";
        PreparedStatement pstmt = conn.prepareStatement(sql);


        pstmt.setInt(1, emp.getEMP_ID());
        pstmt.setString(2, emp.getEMP_NAME());
        pstmt.setInt(3, emp.getSalary());
        pstmt.setInt(4, emp.getDepartment_ID());
        pstmt.setInt(5, emp.getManager_id());

        // Execute the insert
        int rows = pstmt.executeUpdate();
        if (rows > 0) {
            System.out.println("Employee inserted successfully.");
        } else {
            System.out.println("Insert failed.");
        }

        // Clean up
        pstmt.close();
        conn.close();
        scanner.close();
    }
}
